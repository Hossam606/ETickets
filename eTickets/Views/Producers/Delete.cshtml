@model Producer
@{
    ViewData["Title"] = "Delete Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Delete for @Model.ProducerName </h1>
        </p>
        <div class="row">
            <div class=" col-md-8 offset-2">                
                     <div class="form-group text-center">
                        <img class="rounded-circle border-info" style="max-width:150px; max-height:250px" id="ProfilPicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProducerName" class="control-label"></label>
                        <input asp-for="ProducerName" class="form-control" readonly />
                        <span asp-validation-for="ProducerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureUrl" class="control-label"></label>
                        <input asp-for="PictureUrl" class="form-control" readonly/>
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control"readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                <div class="form-group" style="padding-top:10px;">
                    <form asp-action="Delete" >
                        <input type="hidden" asp-for="Id"/>
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                     <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        console.log("dddd");

        $(document).ready(function () {
            var output = document.getElementById('ProfilPicturePreview');
            output.src = $("#PictureUrl").val();
        })
 
    </script>
    }