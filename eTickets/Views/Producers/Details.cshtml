@model Producer
@{
    ViewData["Title"] = "Details For Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1> Details of <span style="color:cadetblue">@Model.ProducerName</span> </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                 
                    <div class="form-group text-center">
                        <img class="rounded-circle border-info" style="max-height:250px; max-width:150px" id="ProfilPicturePreview" />
                    </div>
                    <div class="form-group ">
                        <label asp-for="ProducerName" class="control-label" ></label>
                        <input asp-for="ProducerName" class="form-control" readonly/>
                        <span asp-validation-for="ProducerName" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="PictureUrl" class="control-label"></label>
                        <input asp-for="PictureUrl" class="form-control" readonly />
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly/>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top:10px;">
                               <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
                               <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        console.log("dddd");

        $(document).ready(function () {
            var output = document.getElementById('ProfilPicturePreview');
            output.src = $("#PictureUrl").val();
        })


         

    </script>
    }