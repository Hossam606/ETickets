@model Actor
@{
    ViewData["Title"] = "Add New Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Add A New Producer </h1>
        </p>
        <div class="row">
            <div class=" col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="rounded-circle border-info" style="max-width:150px; max-height:250px" id="ProfilPicturePreview" />
                    </div> 
                    <div class="form-group">
                        <label asp-for="ActorName" class="control-label"></label>
                        <input asp-for="ActorName" class="form-control" />
                        <span asp-validation-for="ActorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureUrl" class="control-label"></label>
                        <input asp-for="PictureUrl" class="form-control" />
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control"/>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top:10px;">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        console.log("dddd");

        $(document).ready(function () {
            var output = document.getElementById('ProfilPicturePreview');
            output.src = $("#PictureUrl").val();
        })


        $("#PictureUrl").on("change", function () {
            var output = document.getElementById('ProfilPicturePreview');
            output.src = $(this).val();
        })

    </script>
    }